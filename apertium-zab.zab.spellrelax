[
	! merge apostrophes
	[ ?* [ ʼ (->) [ %' | %’ | %` | %´ | %‘ | %ʻ ] ] ?* ] .o.

	! merge colon characters
	[ ?* [ ꞉ (->) [ %: ] ] ?* ] .o.

	! Some adjustments for the UDHR orthography

	! accept a:,e:,i:,o:,u:,ë: as à,è,ì,ò,ù,ê
	[ ?* ( à (->) [ a [ %: | ꞉ ] ] ) ?* ] .o.
	[ ?* ( è (->) [ e [ %: | ꞉ ] ] ) ?* ] .o.
	[ ?* ( ì (->) [ i [ %: | ꞉ ] ] ) ?* ] .o.
	[ ?* ( ò (->) [ o [ %: | ꞉ ] ] ) ?* ] .o.
	[ ?* ( ù (->) [ u [ %: | ꞉ ] ] ) ?* ] .o.
	[ ?* ( ê (->) [ ë [ %: | ꞉ ] ] ) ?* ]

]
