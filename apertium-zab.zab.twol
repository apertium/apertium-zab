Rules 

"{B} as m before n"
%{B%}:m <=> _ %>:* :n ;

"{b} as w before b"
%{B%}:w <=> _ %>:* :b ;

"disappearing consonants only surface in progressive"
Cx:Cy <=> c a %>:* _ ;
      where Cx in ( %{l%} %{n%} )
            Cy in (   l     n   )
      matched ;

"c{u} as qu if before i/e/ë: {u}:u"
%{u%}:u <=> c: %>:* _ :quVowels ;

"c{u} as qu if before i/e/ë: c:q"
c:q <=> _ %>:* %{u%}:u ;

"KKC → KC in combined form"
